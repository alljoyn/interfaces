<node xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://www.allseenalliance.org/schemas/introspect.xsd">
   <interface name="org.alljoyn.Multimedia.Seek.Absolute">
      <annotation name="org.alljoyn.Bus.Secure" value="true"/>
      <description language="en">This interface provides the absolute seek operation for bulk data streams.</description>

      <property name="Version" type="q" access="read">
        <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="true"/>
        <description language="en">The interface version number.</description>
      </property>

      <method name="SeekAbsolute">
        <description language="en">Seeks to a absolute position in seconds.</description>
        <arg name="position" type="d" direction="in"/>
      </method>

   </interface>
</node>
