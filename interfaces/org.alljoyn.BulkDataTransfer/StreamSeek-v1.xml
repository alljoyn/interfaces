<node xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://www.allseenalliance.org/schemas/introspect.xsd">
   <interface name="org.alljoyn.BulkDataTransfer.Stream.Seek">
      <annotation name="org.alljoyn.Bus.Secure" value="true"/>
      <description language="en">This interface provides the relative seek operation for bulk data streams.</description>

      <property name="Version" type="q" access="read">
        <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="true"/>
        <description language="en">The interface version number.</description>
      </property>

      <method name="SeekRelative">
        <description language="en">Seeks to a relative position.</description>
        <arg name="position" type="x" direction="in"/>
      </method>

      <signal name="SeekCompleted" sessioncast='true'>
        <description language="en">Indicates the completion of a seek operation.</description>
        <arg name="position" type="x"/>
      </signal>

   </interface>
</node>
