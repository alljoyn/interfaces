<node xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://www.alljoyn.org/schemas/introspect.xsd">
        <!-- The interface provided by all security 2.0 applications
            for discovery purposes.
        -->
        <interface name="org.alljoyn.Bus.Security2.ApplicationState">
        <annotation name="org.alljoyn.Bus.Secure" value="off"/>

        <!-- A struct providing the details of an Elliptic Curve public key.-->
        <struct name="PublicKey">
            <!-- An enumeration describing the key type:
                   0: ECDSA with SHA256
            -->
            <field name="algorithm" type="y"/>
            <!-- An Enumeration identifying the curve this key is using.
                   0: NIST P-256
            -->
            <field name="curveIdentifier" type="y"/>
            <!-- The X coordinate of the public key.-->
            <field name="xCoordinate" type="ay"/>
            <!-- The Y coordinate of the public key.-->
            <field name="yCoordinate" type="ay"/>
        </struct>

        <!-- The Interface version.-->
        <property name="Version" access="read" type="q"/>

        <!-- The State signal is used to advertise the state of an
            application.  It is sessionless, because the signal is intended
            to discover the applications.
        -->
        <signal name="ClaimState" sessionless="true">
            <!-- The public key used by this application to identify itself-->
            <arg name="publicKey" type="[PublicKey]"/>
            <!--  A bit mask representing the current state of the application.
                Values:
                  0x1: Claimable. The application is not claimed, but is
                       accepting claim request.
                  0x2: Claimed. The application is claimed and can be configured.
                  0x4: Update. Indicates that the application requires a
                       configuration update (after a software upgrade).
                       This mask should be combined with Claimed bit mask.
            -->
            <arg name="claimState" type="q"/>
        </signal>
    </interface>
</node>

